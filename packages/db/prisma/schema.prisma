generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @default(uuid())
  name   String
  email  String  @unique
  password String?
  photo   String?
  chats   Chat[]
  rooms   Room[]
}

model Room {
  id      Int    @id @default(autoincrement())
  name    String
  chats   Chat[]
  adminId String
  admin   User   @relation(fields: [adminId], references: [id])
}

model Chat {
  id       Int       @id @default(autoincrement())
  messages  Message[]
  roomId   Int
  room     Room      @relation(fields: [roomId], references: [id])
  userId   String
  user     User      @relation(fields: [userId], references: [id])
}

model Message {
  id        Int       @id @default(autoincrement())
  type      ShapeType
  startX    Float
  startY    Float
  width     Float?
  height    Float?
  radius    Float?
  points    Json?
  content   String?
  color     String?
  createdAt DateTime  @default(now())

  chatId    Int
  chat      Chat      @relation(fields: [chatId], references: [id])
}

enum ShapeType {
  RECT
  CIRCLE
  LINE
  FREEHAND
  TEXT
  SLECTION
}
